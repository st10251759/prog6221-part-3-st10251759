<Window x:Class="ST10251759_PROG6221_POE_P3.AddSteps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10251759_PROG6221_POE_P3"
        mc:Ignorable="d"
        Title="AddSteps" Height="450" Width="800">
    <Grid>
        <Image Height="433" VerticalAlignment="Center" Source="/tasty-pizza-near-ingredients.jpg" Stretch="UniformToFill"/>

        <StackPanel Background="#FF1A1A1A" Height="350" Width="700" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="AddStepstxt" Text="Add Recipe Step" Foreground="#FFA45E0B" FontSize="35" FontWeight="Bold" TextAlignment="Center"></TextBlock>
            <TextBox x:Name="Steptxt" Height="200" Width="600" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" Margin="0,20,0,0"></TextBox>
            <Button x:Name="btnAddStep" Click="AddStep_Clicked" Height="50" Width="200" Content="Add Step" FontSize="25" 
            Foreground="White" Background="#FFA45E0B" Margin="400,15,0,0"></Button>
        </StackPanel>
    </Grid>
</Window>
